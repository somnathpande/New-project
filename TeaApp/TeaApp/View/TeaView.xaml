<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeaApp.View.TeaView" BackgroundImage="tea.jpg">
    <ContentPage.Content>
        <StackLayout Margin="20" >
            <Label Text="WELCOME TO TEA APP" TextColor="Green" FontSize="Medium"
                   FontAttributes="Italic" HorizontalOptions="Center" BackgroundColor="Chocolate"/>
            
            <Entry Placeholder="Enter userID" PlaceholderColor="Red" FontSize="Medium"
                   HorizontalOptions="StartAndExpand" Text="{Binding UserID}"/>
            <Entry Placeholder="Enter Password" HorizontalOptions="StartAndExpand" FontSize="Medium"
                   PlaceholderColor="Red" Text="{Binding Password}" IsPassword="True"/>
            <Button Text="SUBMIT" TextColor="Blue" FontSize="Medium" Command="{Binding button}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>